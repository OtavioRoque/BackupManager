<Window x:Class="BackupManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupManager"
        mc:Ignorable="d"
        Title="Backup Manager 💾" Height="436" Width="300" FontSize="14" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Parte superior -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="tbPlaceholder"
                Text="Filtrar databases..."
                VerticalAlignment="Center"
                Padding="5"
                Foreground="Gray"
                Opacity="0.5"/>

            <TextBox 
                x:Name="txtDatabaseFilter"
                Padding="2"
                Height="28"
                Background="Transparent"
                VerticalContentAlignment="Center"
                TextChanged="txtDatabaseFilter_TextChanged"/>

            <DataGrid
                x:Name="dgDatabases"
                Grid.Row="1"
                Margin="0 10"
                AutoGenerateColumns="False"
                SelectionMode="Single"
                IsReadOnly="True"
                ItemsSource="{Binding Databases}"
                HeadersVisibility="Column"
                MouseLeftButtonUp="dgDatabases_MouseLeftButtonUp">

                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Header=""
                        Width="1*"
                        Visibility="Hidden"
                        Binding="{Binding IsChecked}"/>

                    <DataGridTextColumn
                        Header="Banco"
                        Width="5*"
                        Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Parte inferior -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button
                x:Name="btnSelectDestinationFolder"
                Content="Selecionar pasta destino"
                Background="Transparent"
                BorderThickness="0"
                Foreground="Tomato"
                FontWeight="Bold"
                FontSize="14"
                Click="btnSelectDestinationFolder_Click"/>

            <Grid Grid.Row="1" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <CheckBox
                        x:Name="chkShrink"
                        Margin="0 0 0 10"
                        Content="Shrink"
                        VerticalContentAlignment="Center"/>

                    <CheckBox
                        x:Name="chkCompact"
                        Content="Compact"
                        IsChecked="True"
                        VerticalContentAlignment="Center"/>
                </StackPanel>

                <Button
                    x:Name="btnBackup"
                    Content="Backup"
                    Grid.Column="2"
                    Height="38"
                    Width="80"
                    HorizontalAlignment="Right"
                    Margin="20 0 0 0"
                    Click="btnBackup_Click"/>
            </Grid>
        </Grid>
        
        <!-- ProgressBar -->
        <ProgressBar
            Grid.Row="2"
            Height="15"
            Margin="0 10 0 0"/>
    </Grid>
</Window>
