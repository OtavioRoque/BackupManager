<Window x:Class="BackupManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupManager"
        mc:Ignorable="d"
        Title="Backup Manager 💾" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox
                x:Name="chkSelectAllDatabases"
                Margin="10"
                VerticalAlignment="Center"/>

            <DataGrid
                x:Name="dgDatabases"
                Grid.Row="2"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                Margin="10 0 10 10"
                SelectionMode="Single">

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="" Width="1*"/>
                    <DataGridTextColumn Header="Banco" Width="5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="30 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <CheckBox
                    x:Name="chkShrink"
                    Content="Shrink database"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    IsChecked="True"/>
                <CheckBox
                    x:Name="chkZip"
                    Content="Compactar backup"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    IsChecked="True"/>
            </Grid>

            <Button
                x:Name="btnBackup"
                Content="Backup"
                Grid.Row="2"
                Height="38"
                Width="80"
                VerticalAlignment="Bottom"
                Margin="0 0 0 10"/>
        </Grid>
    </Grid>
</Window>
